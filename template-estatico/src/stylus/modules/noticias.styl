.noticia
	h2,
	h3
		color white
		font-size 1.6rem
		
	img
		img-responsive(block)
		object-fit(cover)
		width 100%
		
	&-container
		box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
		margin 1rem auto
		overflow hidden
		position relative
	
	&-horizontal
		height 23.2rem
		margin 0
		
		img
			height 23.2rem
	
	.btn
		background-color $rojo
		border-radius 1rem
		color white
		display inline-block
		margin-left 1rem
		padding 0.25rem 3rem
		position relative
		text-transform none
		width auto
		z-index 1
		
		&::before
			background-color white
			content ''
			height 1px
			left -1rem
			pointer-events none
			position absolute
			top 50%
			transform translateY(-50%)
			width 2rem
			z-index 3
			
		&:hover
			background-color $azul
		
	.overlay
		background-color rgba(0,0,0,0.5)
		bottom 0
		color white
		padding 1rem
		position absolute
		width 100%