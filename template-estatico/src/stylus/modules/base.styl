a
	color $amarillo
	text-decoration none
	
	&:hover
		text-decoration underline
		
	img
		border 0
	
body
	color $gris
	font-family $font-stack
	font-size  1.4rem
	font-weight $normal
	

h1, h2, h3
	font-weight $bold
	

label
	font-weight $light
	margin 0
	

input,
select
	&:hover, &:focus, &:active
		outline none !important
		outline 0 !important

p
	font-weight $light	

strong
	font-family $font-stack
	font-weight $bold