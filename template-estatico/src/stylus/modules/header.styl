header
	background-color $azul
	background-repeat no-repeat
	background-size cover
	color white
	padding 0 1rem 1rem
	path('layout/bg-header.png')
	position relative
	transitionBase()
	width 100%
	z-index 21
	
	&.affix
		position fixed !important
	
	h1
		color white
		
	p
		margin 0 auto
	
	.btn-menu
		background-color $gris
		left 0
		position absolute
		top 0
		
		.btn
			margin 0
			padding 3.2rem 1rem

	.container-buscador
		
		input
			border none
			
		.form
			&-group
				background-color white
				border-radius 10px
				position relative
			
				button
					background transparent
					border none
					color $azul
					cuadrado(4.2rem)
					font-size 2rem
					position absolute
					right 0.5rem
					top 50%
					transform translateY(-50%)
					
					&:active,
					&:hover,
					&:focus
						outline none !important
						outline 0 !important
						
	.content-text
		position initial
		
		h1,
		p
			font-weight $bold
			line-height 1
			
		h1
			font-size 2rem
			
		p
			margin-top 2rem
			
		.aguila
			position initial
			
			img
				bottom 0
				margin-left -3rem
				position absolute
	
	.fecha
		color $amarillo
			
	.row
		padding-bottom 1rem
		padding-top @padding-bottom

