h1.text-title
	font-size 5rem


.badge
	background-color $gris
	border-radius 5px
	color $amarillo
	display inline-block
	padding 0.5rem 1rem
	margin 0 0.5rem
	transitionBase()
	
	&:hover
		background-color $azul
		color $azul
		text-decoration none

.banner
	padding 2rem
	margin-top 2rem
	
	&-2
		img
			object-fit(cover)
			height 39rem		

.comentario
	&-item
		border 1px solid $gris
		padding 0.5rem
		clearfix()
		

	&-usuario
		font-size 1.5rem
		text-align center
		line-height 1
		a
			color $azul 
			
		i
			color lighten($gris, 40%)
			font-size 6rem
			display block
			text-align center
		
		p
			padding-left 0
			margin 0
			
			

	&-text
		border-left 2px solid lighten($gris, 40%)
		padding-left 2.5rem
		a
			color $azul
		p
			padding-left 0
	

.container-sys-info
	.row
		margin 0
		padding 0
		position fixed
		right 0
		top 11rem
		width auto
		z-index 10
		
		

		.lista-iconos
			background-color white
			border-radius 5px 0 0 5px
			box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
			a
				border-bottom 1px solid $azul
				display block
				padding 0.5rem
				
				img
					display block
					height auto
					margin 0 auto
					max-width 3.8rem
					padding 0
					width 100%
					

				&:nth-last-of-type(1)
					border-bottom-color transparent
		
		.lista-horizontal
			background-color #fff
			border-radius 5px 0px 0px 5px
			bottom 0
			box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
			min-width 30rem
			opacity 0
			overflow hidden
			pointer-events none
			position absolute
			right 4.8rem
			transitionBase()
			
			&.active
				opacity 0.99
				pointer-events all
			
			a
				border-bottom none
				border-right 1px solid $azul
				display inline-block
				
				img
					display inline-block
				
				&:nth-last-of-type(1)
					border-right-color transparent

.content-gallery
	margin 1rem auto
	a
		display block
		margin 0.5rem auto
	img
		display block
		height 10rem
		object-fit(cover)
		width 100%

.etiquetas
	h5,p
		display inline-block
		vertical-align middle
		
	h5
		color $gris
		font-size 1.8rem
		text-align right
		
	p
		padding-left 0.5rem
	

.img-container
	img-responsive(block)
	transitionBase()
	width 100%
	


.usuario
	clear both
	font-size 2rem !important
	margin 2rem auto
	
	i
		margin-right 0.5rem

.title-section
	border-bottom 1px solid #e4e4e4
	color $azul
	margin 1rem 0
	max-width (8.3%*8)
	padding-bottom 1rem
	padding-top @padding-bottom
	text-align left
	text-transform uppercase
	