//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	title Intranet FAC

//-Etiqueta Metadescription
block description
	meta(name="description", content="Description" )


block content
	//slider
	section.container-fluid.container-slider
		
		div#slider-home.slider
			
			-for(x=0; x < 3; x++)
				div.item
					+image('slider/img-slide-demo.jpg', 'Demo Slider')

	///-slider
	//Seccion noticias
	
	section.container-fluid.bg-gris
		div.row

			article.col-sm-6.noticia.noticia-grande
				div.noticia-container
					//Noticia
					//overlay
					div.overlay
						h3.overlay-titulo
							a(href="#").
								Fuerza Aérea Colombiana realiza evacuación aeromédica en el departamento de Caldas
						
						a.btn.btn-more(href="#") Noticia

					///-overlay
					+image('content/sample-noticia.jpg', 'Una Noticia')

					///-Noticia

			article.col-sm-6.noticia
				-for(x=0; x < 2; x++)
					div.col-sm-6
						div.noticia-container.noticia-cuadrado
							//Noticia
							//overlay
							div.overlay
								h3.overlay-titulo
									a(href="#").
										Fuerza Aérea Colombiana realiza evacuación aeromédica en el departamento de Caldas
								
								a.btn.btn-more(href="#") Noticia

							///-overlay
							+image('content/sample-noticia.jpg', 'Una Noticia')

							///-Noticia


				div.clearfix
				
				div.noticia-container.noticia-horizontal
						//Noticia
						div.noticia
							//overlay
							div.overlay
								h3.overlay-titulo
									a(href="#").
										Fuerza Aérea Colombiana realiza evacuación aeromédica en el departamento de Caldas
								
								a.btn.btn-more(href="#") Noticia

							///-overlay
							+image('content/sample-noticia.jpg', 'Una Noticia')

						///-Noticia

				
	
	///-Seccion noticias
	//Seccion destacados
	section.container-fluid.container-destacados-home
		div.row
			h2.title-section destacados
			
			//Destacados
			div.col-sm-8
				-for(y=1; y <= 6; y ++)
					//Item
					div.col-sm-4
						
						div.destacado
							a.destacado-img(href="#"): +image('content/demo-destacado.jpg', 'titulo de noticia')

							div.destacado-content
								h3.destacado-title
									a(href="#") Lorem ipsum dolor sit amet, consectetur adipisicing elit. Qui iure natus saepe voluptates nostrum vel inventore, velit, doloribus beatae dolores voluptatum autem quia tenetur dolorum eos quas nisi aut quisquam!

								p.destacado-fecha.text-right 23 de noviembre de 2017
		
					///-Item

					-if(y % 3 === 0 )
						div.clearfix



			///-Destacados

			//Sidebar
			div.col-sm-4
				div.banner
					a(href="#"): +image('ads/banner-doctrina.jpg', 'Conocimiento al servicio de la fuerza')(class="img-responsive")

				//Magazine
				div.revista
					div.revista-text
						h3: a(href="#") Revista taktika
						p año 7 No. 13

						a.btn.btn-more(href="#") Galería de revistas
					a(href="#"): +image('content/demo-revista.jpg', 'Revista #000')
				///-Magazine

			///-Sidebar

	///-Seccion destacados

	//Videos
	section.container-fluid.bg-blue.container-video-home
		div.row
			//slider videos
			h2.title-section destacados
			div.col-sm-7

				div#slider-videos.slider

					-for(z=0; z< 3; z++)

						div.item
							div.item-text
								
								p: a(href="#") Especial 

							div.multimedia
								div.embed-responsive.embed-responsive-16by9
									video.embed-responsive-item.slider-video.video-js(width="720", height="480", data-setup='{"controls":true, "autoplay":false,"preload": "auto"}')
										source(src="video/demo.mp4", type="video/mp4" )

					div.item
						div.multimedia
							div.embed-responsive.embed-responsive-16by9
								iframe.embed-responsive-item(width="560" height="315" src="https://www.youtube.com/embed/a7FEE1L0Z-o?rel=0" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen)

			///-slider videos

			div.col-sm-5
				div.banner.banner-emisora
					a(href="#"): +image('ads/banner-doctrina.jpg', 'Emisora')(class="img-responsive")
				

	///-Videos


	//redes sociales 
	section.container-fluid.bg-gris.container-cierre
		div.col-sm-8
			div.banner.banner-2
				a(href="#"): +image('ads/banner-4.jpg', 'Emisora')(class="img-responsive")
			

		div.col-sm-4
			h2.title-section.title-follow Síguenos

			//Tabs
			ul.nav.nav-tabs.tab-social(role="tablist")
				li.active.tab-ins(role="presentation")
					a(href="#instagram" aria-controls="instagram" role="tab" data-toggle="tab"): +image('layout/tab-instagram.png', 'Instagram')

				li.tab-fb(role="presentation")
					a(href="#facebook" aria-controls="facebook" role="tab" data-toggle="tab"): +image('layout/tab-facebook.png', 'Facebook')

				li.tab-tw(role="presentation")
					a(href="#twitter" aria-controls="twitter" role="tab" data-toggle="tab"): +image('layout/tab-twitter.png', 'Twitter')
			///-Tabs

			//Content tabs
			div.tab-content
				div#instragram.tab-pane.active(role="tabpanel")
					p Instagram
				
				div#facebook.tab-pane(role="tabpanel")
					p Facebook


				div#twitter.tab-pane(role="tabpanel")
					p Twitter



			///-Content tabs

	///-redes sociales 

	
	

