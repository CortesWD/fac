header.container-fluid
	background-color $azul
	background-repeat no-repeat
	background-size cover
	color white
	padding 0 1rem 1rem
	path('layout/bg-header.png')
	position relative
	top 0
	transitionBase()
	width 100%
	z-index 111
	
	&.affix
		position fixed !important
	
	h1
		color white
		
	p
		margin 0 auto
	
	.btn-menu
		background-color $gris
		left 0
		position absolute
		top 0
		
		.btn
			margin 0
			padding 3.2rem 1rem

	.container-buscador
		
		input
			border none
			
		.form
			&-group
				background-color white
				border-radius 10px
				position relative
			
				button
					background transparent
					border none
					color $azul
					cuadrado(4.2rem)
					font-size 2rem
					position absolute
					right 0.5rem
					top 50%
					transform translateY(-50%)
					
					&:active,
					&:hover,
					&:focus
						outline none !important
						outline 0 !important
						
	.content-text
		position initial
		
		h1,
		p
			font-weight $bold
			line-height 1
			
		h1
			font-size 2rem
			
		p
			margin-top 2rem
			
		.aguila
			position initial
			transitionBase()
			
			img
				bottom 0
				margin-left -3rem
				position absolute
				transitionBase()
	
	.fecha
		color $amarillo
			
	.row
		padding-bottom 1rem
		padding-top @padding-bottom


@media (max-width:1100px)
	header.container-fluid
		overflow hidden
		.content-text
			.aguila			
				img
					max-width 12%
					width 100%
			.img-logo
				margin-top 1rem

		.fecha
			font-size 1rem
			

@media (max-width:820px)
	header.container-fluid
		.btn-menu
			.btn
				padding 3.6rem 1rem
		.content-text
			h1
				font-size 1.8rem
			p
				font-size 1.2rem
				
		.fecha
			font-size 0.8rem
			

@media (max-width:770px)
	header.container-fluid
		padding 0 !important
		.btn-menu
			position relative
		
			.btn
				padding 2rem 1rem !important
		.content-text
			text-align left
			.aguila
				display none
			
		.col-sm-4
			display none

		.row
			padding 0
			margin 0
			
		.container-buscador
			margin-top 1rem
			
		.fecha
			display none
			
@media (max-width:640px) and (orientation: landscape)
	header.container-fluid
		.btn-menu		
			.btn
				padding 1rem !important
				
		.content-text
			h1
				text-align right
			.img-logo
				max-width 9rem

