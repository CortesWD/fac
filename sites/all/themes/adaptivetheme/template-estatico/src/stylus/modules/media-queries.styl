	.destacado
		clearfix()
		margin 2rem auto
		
		&-content
			float left
			max-width 85%
			padding-left 0.5rem
		&-fecha
			text-align left !important
			margin-top 1rem
			
		&-img
			float left
			max-width 15%
		&-title
			display block
			font-size 1.6rem
			height auto
			margin 1rem auto
			overflow visible
			text-overflow initial
			white-space normal

	.noticia
			
		.col-sm-6
			padding 0

		&-container
			border-bottom 1px solid darken($gris, 40%)
			overflow visible
			margin 3rem auto
			
		&-horizontal
			border-bottom none
			height auto
			padding-bottom 0
			margin 0
			img
				height auto
				
			.noticia
				padding 0
				
		img
			display none
			// object-fit(initial)
			// // position absolute
			// max-width 20%
		
		.overlay
			background-color transparent
			left unset
			padding 1rem
			top unset
			position initial
			width 100% !important
			a
				color $gris

			h3
				color $gris
				margin-top 0
				
			.btn
				color white
				

	.title-section
		padding-bottom 2rem
		padding-top @padding-bottom
		max-width 100%
		

