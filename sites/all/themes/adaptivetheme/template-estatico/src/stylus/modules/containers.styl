.container
	&-cierre
		padding-bottom 3rem !important
		padding-top 4rem !important
		.banner-2
			img
				width 100%
	&-fluid
		clearfix()
		margin 0 auto
		transform-origin right top
		transitionBase()
		width 100%
		

	&-social-mobile
		display none
		
	&-noticias
		padding-bottom 1rem
		padding-top @padding-bottom
	
	&-slider
		padding 0
		

	&-video-home
		.title-section
			padding-bottom 3rem
			padding-top 4rem
			max-width (8.3%*6) !important
			

		.col-sm-6
			
			img
				height auto !important
				max-width 100% !important
				width 100% !important
		


@media (min-width: 770px)
	.container-sys-info
		position initial
		
		.row
			position initial
			

@media (min-width: 1440px)

	.container
		&-cierre
			.banner-2
				img
					width 100%